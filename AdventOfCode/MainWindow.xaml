<Window x:Class="AdventOfCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="AdventOfCode">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="Day 1" Margin="5, 0"/>
                <TextBox Text="{Binding Day1Result, FallbackValue=Unknown}" Margin="5,0"/>
                <TextBox Text="{Binding Day1Result2, FallbackValue=Unknown}" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="Day 2" Margin="5, 0"/>
                <TextBox Text="{Binding Day2Result, FallbackValue=Unknown}" Margin="5,0"/>
                <TextBox Text="{Binding Day2Result2, FallbackValue=Unknown}" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="Day 3" Margin="5, 0"/>
                <TextBox Text="{Binding Day3Result, FallbackValue=Unknown}" Margin="5,0"/>
                <TextBox Text="{Binding Day3Result3, FallbackValue=Unknown}" Margin="5,0"/>
            </StackPanel>
            <Button Content="Process Answers" Margin="20" MinHeight="30" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
